@model Events.External.EventfulComment

@{
    int id = ViewBag.id;
    string eventfulId = ViewBag.eventfulId;
    bool isEventfulEvent = ViewBag.isEventfulEvent;
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add Comment</h4>
        <hr />
        @Html.Hidden("id", id)
        @Html.Hidden("eventfulId", eventfulId)
        @Html.Hidden("isEventfulEvent", isEventfulEvent)

        <div class="form-group">
            @Html.TextAreaFor(model => model.Text, htmlAttributes: new { @style = "min-width:250px"})
            <div class="col-md-10">
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" /> &nbsp; @Html.ActionLink("Cancel", "Index", "Home")
            </div>
        </div>
    </div>
}
